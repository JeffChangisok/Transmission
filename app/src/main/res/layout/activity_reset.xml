<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resetActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重置密码"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_margin="40dp"/>

    <include android:id="@+id/include_reset_phone" layout="@layout/phone" />

    <include layout="@layout/verification"
        android:id="@+id/include_reset_verfication"
        android:visibility="gone"/>

    <include layout="@layout/reset_passwd"
        android:id="@+id/include_reset_passwd"
        android:visibility="gone" />

</LinearLayout>